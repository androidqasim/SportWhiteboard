<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_whiteboard"
    tools:context="com.mubashir.hamza.sportswhiteboard.Activitys.Whiteboard_Activity">

    <LinearLayout
        android:id="@+id/drawingSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="vertical"
        android:layout_weight="2" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorMenuOptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_weight=".35">

        <Button
            android:id="@+id/blueButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/blue_selected"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight=".5"
            android:onClick="onButtonOptionsClick"
            android:clickable="true"/>

        <Button
            android:id="@+id/redButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/red_not_selected"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight=".5"
            android:onClick="onButtonOptionsClick"
            android:clickable="true"/>

        <Button
            android:id="@+id/yellowButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/yellow_not_selected"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight=".5"
            android:onClick="onButtonOptionsClick"
            android:clickable="true"/>

        <Button
            android:id="@+id/eraseButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_not_selected"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight=".5"
            android:onClick="onButtonOptionsClick"
            android:clickable="true"/>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Clear"
            android:background="@drawable/clear_button"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1.5"
            android:onClick="onButtonOptionsClick"
            android:clickable="true"
            android:textSize="@dimen/button_clear"/>
    </LinearLayout>
</LinearLayout>